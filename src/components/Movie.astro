---
import type { IMovie } from '@interfaces/Movie.response'



interface Props{
    movie:IMovie

}
const {movie }= Astro.props;
const detail = `/detail/${movie.id}`;
const poster =`https://image.tmdb.org/t/p/w500/${movie.poster_path}`;
---

<div class="col-lg-3">
    <div class="card mt-4" style="width: 18rem;">
       <a href={detail}>
        <img src={poster} transition:name={movie.id.toString()}   alt="poster" class="card-img-top"> 
       </a>
       <div class="card-body">
        <h5 class="card-title">
           {movie.title}
        </h5>
       </div>
    </div>
</div>